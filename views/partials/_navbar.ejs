
<% if (user) { %>
    <h1>Welcome to the your CookBook, <%= user.username %>!</h1>
    <p>
      <a href="/views/recipes">View my recipes</a>
      <a href="/auth/sign-out">Sign out</a>
    </p>
<% } else { %>
    <h1>Welcome, please sign in or sign up if you do not have an account.</h1>
    <p>
      <a href="/auth/sign-up">Sign up</a> or
      <a href="/auth/sign-in">Sign in</a>.
    </p>
<% } %>

