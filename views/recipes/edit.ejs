<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%= recipe.name %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h2>Editing <%= recipe.name %></h2>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
        <label for="name">Recipe Name:</label>
        <input type="text" name="name" value="<%= recipe.name %>">
        <label for="instructions">Instructions</label>
        <input type="text" name="instructions" value="<%= recipe.instructions %>">
        <ul>
        <% recipe.ingredients.forEach((ingredient) => { %>
            <li><%= ingredient.name %>
 
            </li>
        <% }) %></ul><br />
        <label for="newIngredient">New Ingredient:</label>
        <input type="text" name="newIngredient" id="newIngredient">
        <button type="submit">Edit Recipe</button>
    </form>
    <a href="/recipes/<%= recipe._id %>">Back to Recipe</a>
    <!-- <a href="/ingredients">View all ingredients</a>  -->
</body>
</html>